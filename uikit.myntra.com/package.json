{
  "name": "@myntra/spectrum-cli-app-uikit",
  "displayName": "UIKit: Design Language System",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "NODE_OPTIONS=--max_old_space_size=4096 spectrum-cli-service serve",
    "build:types": "node ../scripts/bundle-types-browser.js",
    "build:changelog": "echo '---\nlayout: docs\n---\n' > src/router/pages/changelog.mdx && cat ../CHANGELOG.md >> src/router/pages/changelog.mdx",
    "prebuild": "npm run build:changelog",
    "build": "spectrum-cli-service build",
    "deploy": "spectrum-cli-service deploy",
    "promote": "spectrum-cli-service promote"
  },
  "dependencies": {
    "@babel/standalone": "^7.3.4",
    "lodash.debounce": "^4.0.8",
    "marked": "^0.6.1",
    "monaco-editor": "^0.17.1",
    "portfinder": "^1.0.24",
    "prismjs": "^1.15.0",
    "react-monaco-editor": "^0.28.0"
  },
  "devDependencies": {
    "@mdx-js/loader": "^0.17.5",
    "@myntra/spectrum-cli-plugin-babel": "^2.8.2",
    "@myntra/spectrum-cli-plugin-eslint": "^2.8.2",
    "@myntra/spectrum-cli-plugin-redux": "^2.8.2",
    "@myntra/spectrum-cli-plugin-router": "^2.8.2",
    "@myntra/spectrum-cli-plugin-typescript": "^2.8.2",
    "@myntra/spectrum-cli-service": "^2.8.2",
    "autoprefixer": "^9.4.9",
    "front-matter": "^3.0.1",
    "lazy-compile-webpack-plugin": "^0.1.5",
    "loader-utils": "^1.2.3",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "raw-loader": "^1.0.0",
    "remark-autolink-headings": "^5.1.0",
    "remark-emoji": "^2.0.2",
    "remark-github": "^7.0.6",
    "remark-sectionize": "^1.0.1",
    "remark-slug": "^5.1.1",
    "remark-squeeze-paragraphs": "^3.0.3",
    "remark-toc": "^5.1.1",
    "sass": "^1.17.3",
    "sass-loader": "^7.1.0",
    "webpack": "^4.39.1",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "prettier": {
    "comma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 chrome versions"
  ],
  "packageManager": "pnpm"
}
