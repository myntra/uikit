{
  "include": ["components/", "packages/", "themes/", "@types/"],
  "exclude": ["dist", "node_modules", "old-packages"],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@myntra/*": [
        "packages/*",
        "components/uikit-component-*",
        "components/uikit-theme-*"
      ]
    }
  }
}
