{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Form",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "description": "Your full name"
    },
    "email": {
      "type": "string",
      "title": "Email Address",
      "description": "Your personal email address",
      "format": "email"
    },
    "addresses": {
      "type": "array",
      "title": "Contact Addresses",
      "description": "Your all contact addresses",
      "items": {
        "type": "object",
        "title": "Contact Address",
        "description": "Your contact address",
        "properties": {
          "street": {
            "type": "string",
            "title": "Street"
          },
          "phone": {
            "type": "string",
            "title": "Contact Number",
            "format": "tel"
          },
          "pin": {
            "type": "number",
            "title": "PIN Code",
            "pattern": "^\\d{6}$"
          }
        }
      }
    }
  },
  "required": [
    "name",
    "email"
  ]
}
