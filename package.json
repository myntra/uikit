{
  "title": "UIKit | Myntra",
  "description": "UIKit for Myntra SCM and beyond",
  "repository": "https://bitbucket.org/myntra/uikit",
  "author": "Rahul Kadyan <hi@znck.me>",
  "license": "UNLICENSED",
  "private": true,
  "version": "1.12.19",
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "start": "node uikit.myntra.com/tools/start-dev-server",
    "build": "npm run :build",
    "pre:build": "pnpm recursive --filter ./components --filter ./packages --filter ./themes run build",
    ":build": "node scripts/build.js",
    "clean": "rm -rf uikit.myntra.com/{dist,node_modules} {components,packages,themes}/*/{dist,node_modules} node_modules",
    "refresh": "run-p refresh:*",
    "refresh:packages": "node scripts/bootstrap.js",
    "refresh:types": "node scripts/bundle-types-browser.js",
    "preinstall": "node scripts/ensure-pnpm.js",
    "postinstall": "cd uikit.myntra.com && pnpm install",
    ":eslint": "eslint",
    ":prettier": "prettier",
    ":stylelint": "stylelint",
    ":serve": "serve",
    "docs:dev": "cd uikit.myntra.com && npm run serve",
    "docs:build": "cd uikit.myntra.com && npm run build",
    "docs:deploy": "cd uikit.myntra.com && npm run deploy",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "test": "jest",
    "coverage": "jest --coverage",
    "coverage:open": "run-s coverage 'open coverage/lcov-report/index.html'",
    "update:master": "git checkout master && git rebase develop && git push origin master && git checkout develop",
    "pre:publish": "CI=true npm run build",
    ":publish": "node ./scripts/publish.js",
    "pre:release": "git checkout develop && git pull origin develop",
    ":release": "standard-version -a",
    "post:release": "npm run :publish && git push --follow-tags && npm run update:master",
    "release": "npm run :release",
    ":update:versions": "node ./scripts/set-version.js",
    ":beta": "standard-version -a -p beta -a",
    "post:beta": "npm run :publish",
    "beta": "npm run :beta"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-typescript": "^7.3.3",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@myntra/codemod-utils": "link:packages/codemod-utils",
    "@myntra/docgen": "link:packages/docgen",
    "@myntra/eslint-config-standard": "link:packages/eslint-config-standard",
    "@myntra/rollup-plugin-classnames": "link:packages/rollup-plugin-classnames",
    "@myntra/rollup-plugin-scss": "link:packages/rollup-plugin-scss",
    "@myntra/stylelint-config-standard": "link:packages/stylelint-config-standard",
    "@types/enzyme": "^3.9.1",
    "@types/jest": "^24.0.11",
    "any-observable": "^0.3.0",
    "autoprefixer": "^9.5.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "chalk": "^2.4.1",
    "debug": "^4.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx": "^0.0.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "hasha": "^4.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^7.0.4",
    "lodash.camelcase": "^4.3.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "prettier": "^1.16.4",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rollup": "^1.7.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-copy": "^3.0.0",
    "rollup-plugin-delete": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "rollup-plugin-url": "^2.2.2",
    "rxjs": "^6.4.0",
    "sass": "^1.23.0-module.beta.1",
    "serve": "^11.0.0",
    "standard-version": "^4.4.0",
    "stylelint": "^9.10.1",
    "topological-sort": "^0.3.0",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test -- --silent --changedSince $(./scripts/remote-tracking-branch.sh)"
    }
  },
  "standard-version": {
    "scripts": {
      "prechangelog": "npm run test",
      "postbump": "npm run :update:versions && git add -A"
    }
  }
}
