{
  "title": "UIKit | Myntra",
  "description": "UIKit for Myntra SCM and beyond",
  "repository": "https://bitbucket.org/myntra/uikit",
  "author": "Rahul Kadyan <hi@znck.me>",
  "license": "UNLICENSED",
  "private": true,
  "version": "0.7.1",
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "build": "npm run :build",
    "bootstrap": "node scripts/bootstrap.js",
    "preinstall": "node scripts/ensure-pnpm.js",
    ":eslint": "eslint",
    ":stylelint": "stylelint",
    "docs:dev": "cd docs && npm run serve",
    "docs:build": "cd docs && npm run build",
    "test": "jest",
    "coverage": "npm run :coverage",
    ":coverage": "jest --coverage",
    "post:coverage": "[ -x \"$(command -v open)\" ] && open coverage/lcov-report/index.html",
    "ci": "node scripts/jenkins-build.js",
    ":build": "node scripts/build.js",
    "update:master": "git checkout develop && git pull origin develop && git checkout master && git rebase develop",
    "update:develop": "git checkout develop && git rebase master && git push origin develop",
    "pre:publish": "npm run build",
    ":publish": "./scripts/publish.sh && git push --follow-tags origin master",
    "pre:release": "npm run update:master",
    ":release": "standard-version -a",
    "post:release": "npm run :publish && npm run update:develop",
    "pre:release:beta": "npm run update:master",
    ":release:beta": "standard-version -a --prerelease beta",
    ":post:release:beta": "npm run :publish && npm run update:develop",
    "changelog": "package.json CHANGELOG.md",
    ":update:versions": "lerna version $(node scripts/version.js) --no-changelog --no-commit-hooks --no-push --exact --force-publish --amend -y --no-git-tag-version",
    "post:update:versions": "git add lerna.json 'packages/@myntra/*/package.json' && git commit --amend --no-edit"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-typescript": "^7.3.3",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@myntra/docgen": "link:packages/docgen",
    "@myntra/eslint-config-standard": "link:packages/eslint-config-standard",
    "@myntra/rollup-plugin-classnames": "link:packages/rollup-plugin-classnames",
    "@myntra/stylelint-config-standard": "link:packages/stylelint-config-standard",
    "@types/jest": "^24.0.11",
    "any-observable": "^0.3.0",
    "autoprefixer": "^9.5.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "chalk": "^2.4.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-jsx": "^0.0.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "hasha": "^4.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^7.0.4",
    "lodash.camelcase": "^4.3.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.11.0",
    "postcss-import": "^12.0.1",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "rollup": "^1.7.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-typescript2": "^0.20.1",
    "rxjs": "^6.4.0",
    "standard-version": "^4.4.0",
    "stylelint": "^9.10.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test -- --silent --changedSince $(./scripts/remote-tracking-branch.sh)"
    }
  },
  "standard-version": {
    "scripts": {
      "prechangelog": "npm run test",
      "changelog": "npm run changelog",
      "postcommit": "npm run :update:versions"
    }
  },
  "prettier": {
    "comma": "es5",
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf",
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "useTabs": false,
    "printWidth": 80
  }
}
