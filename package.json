{
  "repository": "https://bitbucket.org/myntra/uikit",
  "author": "Rahul Kadyan <hi@znck.me>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "preinstall": "node scripts/ensure-yarn.js",
    "lint": "eslint --ext .js --ext .jsx --ext .json packages/ docs/ .",
    "dev": "poi --jsx react docs/_app/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "eslint": "^4.19.1",
    "lint-staged": "^7.0.4",
    "poi": "^10.0.0-rc.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "git add"
    ],
    "*.jsx": [
      "yarn lint",
      "git add"
    ],
    "*.json": [
      "yarn lint",
      "git add"
    ]
  },
  "dependencies": {
    "markdown-to-jsx": "^6.6.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-router-dom": "^4.2.2",
    "whatwg-fetch": "^2.0.4"
  }
}
