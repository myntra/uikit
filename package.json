{
  "repository": "https://bitbucket.org/myntra/uikit",
  "author": "Rahul Kadyan <hi@znck.me>",
  "license": "UNLICENSED",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "preinstall": "node scripts/ensure-yarn.js",
    "lint": "eslint --ext .js --ext .jsx --ext .json packages/ docs/ .",
    "dev": "poi --jsx react docs/_app/index.js",
    "build": "poi build --jsx react docs/_app/index.js",
    "test": "jest"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.0-beta.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.0.0-beta.1",
    "lint-staged": "^7.0.4",
    "poi": "^10.0.0-rc.3",
    "postcss-import": "^11.1.0",
    "postcss-modules": "^1.1.0",
    "regenerator-runtime": "^0.11.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "git add"
    ],
    "*.jsx": [
      "yarn lint",
      "git add"
    ],
    "*.json": [
      "yarn lint",
      "git add"
    ]
  },
  "dependencies": {
    "markdown-to-jsx": "^6.6.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-router-dom": "^4.2.2",
    "whatwg-fetch": "^2.0.4"
  }
}
