{
  "title": "UIKit | Myntra",
  "description": "UIKit for Myntra SCM and beyond",
  "repository": "https://bitbucket.org/myntra/uikit",
  "author": "Rahul Kadyan <hi@znck.me>",
  "license": "UNLICENSED",
  "private": true,
  "version": "0.5.2",
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "preinstall": "node scripts/ensure-yarn.js",
    "lint": "eslint --ext .js --ext .jsx --ext .json packages/ docs/ .",
    "lint:js": "eslint --ext .js --ext .jsx --ext .json",
    "lint:css": "stylelint packages/**/*.css docs/**/*.css",
    "predev": "yarn workspace @myntra/tokens build",
    "dev": "poi --jsx react docs/_app/index.js",
    "prebuild": "yarn workspace @myntra/tokens build",
    "build": "poi build --jsx react docs/_app/index.js",
    "build:scss": "node scripts/build-css.js",
    "postbuild": "node scripts/create-static-routes.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "postcoverage": "[ -x \"$(command -v open)\" ] && open coverage/lcov-report/index.html",
    "ci": "node scripts/jenkins-build.js",
    "update:master": "git checkout develop && git pull origin develop && git checkout master && git rebase develop",
    "update:develop": "git checkout develop && git rebase master && git push origin develop",
    "prerelease": "yarn update:master",
    "release": "standard-version -a && ./scripts/publish.sh && git push --follow-tags origin master",
    "postrelease": "yarn update:develop",
    "prerelease:alpha": "yarn update:master",
    "release:alpha": "standard-version -a --prerelease alpha && ./scripts/publish.sh && git push --follow-tags origin master",
    "postrelease:alpha": "yarn update:develop",
    "prerelease:beta": "yarn update:master",
    "release:beta": "standard-version -a --prerelease beta && ./scripts/publish.sh && git push --follow-tags origin master",
    "postrelease:beta": "yarn update:develop",
    "changelog": "cp CHANGELOG.md docs/changelog.md && git add docs/changelog.md",
    "lerna:version": "lerna publish --skip-git --skip-npm --exact --yes --repo-version $(node scripts/version.js) && git add packages/ lerna.json"
  },
  "workspaces": [
    "packages/@myntra/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.0-beta.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "chalk": "^2.4.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.0",
    "husky": "^1.0.0-rc.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.0.0-beta.1",
    "lerna": "^2.0.0",
    "lint-staged": "^7.0.4",
    "poi": "^10.0.0-rc.3",
    "postcss-css-variables": "^0.8.1",
    "postcss-import": "^11.1.0",
    "postcss-modules": "^1.1.0",
    "regenerator-runtime": "^0.11.1",
    "rollup": "^0.66.2",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-local-resolve": "^1.0.7",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-string": "^2.0.2",
    "sass": "^1.13.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "svg-react-loader": "^0.4.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:js --fix",
      "git add"
    ],
    "*.css": [
      "yarn stylelint --fix",
      "git add"
    ],
    "*.jsx": [
      "yarn lint:js --fix",
      "git add"
    ],
    "*.json": [
      "yarn lint:js --fix",
      "git add"
    ]
  },
  "dependencies": {
    "scheduler": "^0.11.2",
    "minimist": "^1.2.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-router-dom": "^4.2.2",
    "whatwg-fetch": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --silent --changedSince $(./scripts/remote-tracking-branch.sh)"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "yarn test && yarn changelog && yarn lerna:version && node scripts/build.js"
    }
  }
}
